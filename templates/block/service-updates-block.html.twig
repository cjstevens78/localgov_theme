{% if items %}
<div class="container-fluid site-max">
  <div class="servicehub--update row">
    <div class="servicehub--status col-12">
        <span>
            <i class="fas fa-info-circle"></i>
            <h3>Service updates</h3>
        </span>
        <a href="{{ see_all_link }}" class="hidden-xs action-link pull-right"><i class="action-link--icon fas fa-chevron-right"></i>See all service updates</a>
    </div>

    <div class="servicehub--update_inner col-12">
      {% for item in items %}
      <ul>
        <li>{{ item.date|date("d.m.Y") }}</li>
        <li><strong>{{ item.title }} - </strong>{{ item.description }}</li>
        <li><a class="read-more" href="{{ item.url }}">Read more about {{ item.title }}</a></li>
      </ul>
      {% endfor %}
    </div>
    <a href="{{ see_all_link }}" class="visible-xs action-link margin-top--20"><i class="action-link--icon fas fa-chevron-right"></i>See all service updates</a>
  </div>
</div>
{% endif %}