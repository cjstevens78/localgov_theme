{% extends "page.html.twig" %}

{% block header %}
  <header class="bg-primary">
    
      <!-- Main navigation -->
      <nav class="navbar navbar-expand-lg navbar-dark site-max nav-vanilla">

          <!-- Navbar content -->
       
            <a class="navbar-brand" href="/" title="Go to the London Borough of Croydon homepage">
              <img class="img-fluid" src="{{ logopath }}" alt="" />
            </a>
     

          <!-- Mobile toggle button -->
          <button id="js-nav-toggle" class="btn" type="button" aria-label="Toggle navigation">
            <span class="fa fa-times d-none"></span>
            <span class="fa fa-bars fa-1x"></span>
          </button>

          <div class="collapse navbar-collapse" id="menu-purejs">
            <ul class="navbar-nav ml-auto">
              <li class="nav-item"> <a class="nav-link" href="https://www.croydon.gov.uk/atoz">A to Z</a></li>
              <li class="nav-item"> <a class="nav-link" href="http://maps.croydon.gov.uk/aya/pages/aya/aya.html">In your area</a></li>
              <li class="nav-item"> <a class="nav-link" href="http://news.croydon.gov.uk/">News</a></li>
              <li class="nav-item"> <a class="nav-link" href="https://www.croydon.gov.uk/jobsatcroydon/search-jobs">Jobs</a> </li>
            </ul>
          </div>

      </nav>
      <!-- End main navigation -->

  </header>
{% endblock %}


{% block content %}

  <div class="container-fluid site-max homepage--search">
    <div class="row">
      <div class="col-12">
        <form action="/search/google" method="get">
          
          <div class="input-group">
            <div class="input-group-prepend">
              <label for="form-control" class="mb-0 mr-3" id="whatlooking">What are you looking for?</label>
            </div>
            <input type="text" id="form-control" class="form-control" aria-label="Search" aria-describedby="whatlooking" name="keys">
            <div class="input-group-append">
              <button class="btn btn-primary pl-2 pl-sm-5 pr-2 pr-sm-5" type="submit">Search <span class="fa fa-search"></span></button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>

  <main role="main" class="container-fluid site-max mt-0">
      {{ page.breadcrumb }}
      {{ page.messages }}
      {{ page.content }}
      <div class="row mt-4 mb-4"> 
        {% include '@croydon/system/notice.html.twig' with {'page': page, 'border': true} %}
      </div>
      {{ page.content_bottom }}
  </main>
  
{% endblock %}
